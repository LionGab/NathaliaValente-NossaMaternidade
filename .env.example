# ============================================
# Nossa Maternidade - Environment Variables
# ============================================
#
# IMPORTANTE:
# 1. Copie este arquivo para .env.local
# 2. Preencha com suas credenciais reais
# 3. NUNCA commite .env.local no Git
#
# ============================================

# ============================================
# SUPABASE (OBRIGATÓRIO)
# ============================================
# Obtenha em: https://app.supabase.com/project/_/settings/api

EXPO_PUBLIC_SUPABASE_URL=https://seu-projeto.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=sua-chave-anon-aqui
EXPO_PUBLIC_SUPABASE_FUNCTIONS_URL=https://seu-projeto.supabase.co/functions/v1

# ============================================
# APIs DE IA (RECOMENDADO)
# ============================================

# OpenAI (NathIA - Recomendado)
# Obtenha em: https://platform.openai.com/api-keys
EXPO_PUBLIC_OPENAI_API_KEY=sk-...

# Gemini (Opcional)
# Obtenha em: https://makersuite.google.com/app/apikey
EXPO_PUBLIC_GEMINI_API_KEY=...

# ElevenLabs (Voz da NathIA)
# Obtenha em: https://elevenlabs.io/api
EXPO_PUBLIC_ELEVENLABS_API_KEY=...
EXPO_PUBLIC_ELEVENLABS_VOICE_ID=...

# ============================================
# ANALYTICS & MONITORING (OPCIONAL)
# ============================================

# Sentry (Error tracking)
# Obtenha em: https://sentry.io
EXPO_PUBLIC_SENTRY_DSN=...

# OneSignal (Push notifications - alternativa)
# Obtenha em: https://onesignal.com
EXPO_PUBLIC_ONESIGNAL_APP_ID=...

# ============================================
# PREMIUM/ASSINATURAS (OPCIONAL)
# ============================================

# RevenueCat (In-App Purchases)
# Obtenha em: https://app.revenuecat.com
EXPO_PUBLIC_REVENUECAT_IOS_KEY=...
EXPO_PUBLIC_REVENUECAT_ANDROID_KEY=...

# Habilitar features de IA (NathIA, transcrição, etc)
EXPO_PUBLIC_ENABLE_AI_FEATURES=true

# Habilitar gamificação (streaks, badges, etc)
EXPO_PUBLIC_ENABLE_GAMIFICATION=true

# Habilitar analytics
EXPO_PUBLIC_ENABLE_ANALYTICS=false

